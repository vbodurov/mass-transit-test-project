<Window x:Class="MassTransitPublisher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Publisher" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label FontSize="50" HorizontalAlignment="Center" Grid.Row="0">Publisher</Label>
        <TextBox Name="NameVal" FontSize="20" HorizontalAlignment="Stretch" Grid.Row="1" HorizontalContentAlignment="Center">aaa</TextBox>
        <Button Content="Publish" Grid.Row="2" Click="OnPublish"></Button>
    </Grid>
</Window>
